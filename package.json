{
  "name": "docker-adonis-mailer",
  "version": "1.2.8",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build --production",
    "test": "node ace test",
    "start": "node build/server.js",
    "lint": "cross-env NODE_ENV=production eslint . --ext=.ts",
    "format": "prettier --write .",
    "release": "pnpm release:bump-version && pnpm release:changelogen",
    "release:bump-version": "lerna version",
    "release:changelogen": "ts-node ./changelog-generate.ts",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*": "prettier --write -u",
    "*.{js,ts}": "cross-env NODE_ENV=production eslint --fix"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.9.6",
    "@commitlint/cli": "^19.1.0",
    "@commitlint/config-conventional": "^19.1.0",
    "@japa/preset-adonis": "^1.2.0",
    "@japa/runner": "^2.5.1",
    "@types/mjml": "^4.7.4",
    "@types/proxy-addr": "^2.0.3",
    "@types/source-map-support": "^0.5.10",
    "adonis-preset-ts": "^2.1.0",
    "changelogen": "^0.5.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^9.0.11",
    "lerna": "^8.1.2",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^4.9.4",
    "youch": "^3.3.3",
    "youch-terminal": "^2.2.3"
  },
  "dependencies": {
    "@adonisjs/core": "^5.8.0",
    "@adonisjs/mail": "^8.2.1",
    "@adonisjs/repl": "3.1.11",
    "@adonisjs/view": "^6.2.0",
    "mjml": "^4.15.3",
    "pino-pretty": "^10.3.1",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.14",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@japa/core",
        "openapi-types"
      ]
    }
  }
}
