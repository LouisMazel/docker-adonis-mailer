{
  "name": "adonis-docker-mailer",
  "version": "0.1.4",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch",
    "dev:local": "cross-env ENV_PATH=.env.local node ace serve --watch",
    "build": "node ace build --production",
    "start": "node server.js",
    "lint": "cross-env NODE_ENV=production eslint . --ext=.ts",
    "format": "prettier --write .",
    "lerna:version": "npx lerna version",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*": "prettier --write -u",
    "*.{js,ts}": "cross-env NODE_ENV=production eslint --fix"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.9.5",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@japa/preset-adonis": "^1.2.0",
    "@japa/runner": "^2.2.2",
    "@types/mjml": "^4.7.0",
    "@types/proxy-addr": "^2.0.0",
    "@types/source-map-support": "^0.5.6",
    "adonis-preset-ts": "^2.1.0",
    "commitlint-config-cz": "^0.13.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "lerna": "^6.1.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4",
    "youch": "^3.2.2",
    "youch-terminal": "^2.1.5"
  },
  "dependencies": {
    "@adonisjs/core": "^5.8.0",
    "@adonisjs/mail": "^8.1.2",
    "@adonisjs/repl": "^3.1.0",
    "@adonisjs/view": "^6.2.0",
    "mjml": "^4.13.0",
    "pino-pretty": "^9.1.1",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@japa/core",
        "openapi-types"
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  }
}
