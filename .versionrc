// @ts-check
const types = require('commitlint-config-cz/lib/types')()

module.exports = {
  types: types.map((type) => {
    console.log('types', types)
    const base = { type, hidden: false }
    if (type === 'feat') return { ...base, section: '✨ Features' }
    if (type === 'fix') return { ...base, section: '💊 Bug Fixes' }
    if (type === 'docs') return { ...base, section: '📝 Documentation' }
    if (type === 'test') return { ...base, section: '✅ Testing' }
    if (type === 'refactor') return { ...base, section: '♻️ Code Refactoring' }
    if (type === 'chore') return { ...base, section: '🚚 Chores' }
    if (type === 'perf') return { ...base, section: '⚡️ Performance Improvements' }
    if (type === 'build') return { ...base, section: '🛠 Build' }
    if (type === 'style') return { ...base, section: '💄 Styling' }
    return { ...base, hidden: true }
  }),
  scripts: {
    pretag: 'CURR_TAG=$(cat package.json | jq -r .version); git tag -d $CURR_TAG; exit 0',
  },
}
